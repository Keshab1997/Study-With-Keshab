rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users কালেকশনের নিয়ম
    match /users/{userId} {
      // একজন অথেন্টিকেটেড ব্যবহারকারী নিজের ডকুমেন্ট পড়তে এবং আপডেট করতে পারবে।
      allow get, update: if request.auth.uid == userId;

      // অথেন্টিকেটেড ব্যবহারকারীরা লিডারবোর্ডের জন্য তালিকা পড়তে পারবে।
      allow list: if request.auth != null;
      
      // নতুন ব্যবহারকারী তৈরি করার অনুমতি।
      allow create: if request.auth != null;
    }

    // === লিডারবোর্ডের জন্য নিয়ম ===
    match /quiz_scores/{scoreId} {
      // সব অথেন্টিকেটেড ব্যবহারকারী স্কোর পড়তে পারবে (লিডারবোর্ড এবং র‍্যাঙ্কের জন্য)
      allow read: if request.auth != null;

      // ব্যবহারকারীরা নিজেদের স্কোর তৈরি করতে পারবে।
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // ক্লায়েন্ট থেকে স্কোর আপডেট বা ডিলিট করা যাবে না।
      allow update, delete: if false;
    }

    // NotificationQueue কালেকশনের নিয়ম
    match /notificationQueue/{docId} {
      // শুধুমাত্র অ্যাডমিনরাই এই কালেকশনে লিখতে পারবে।
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // অন্য কোনো অপারেশন ক্লায়েন্ট থেকে করা যাবে না।
      allow read, update, delete: if false;
    }

    // Notifications কালেকশনের নিয়ম
    match /notifications/{notificationId} {
      // যে কোনো অথেন্টিকেটেড ব্যবহারকারী নোটিফিকেশন পড়তে পারবে।
      allow read: if request.auth != null;
      
      // ক্লায়েন্ট থেকে নোটিফিকেশন লেখা যাবে না।
      allow write: if false;
    }

    // Class Notes কালেকশনের নিয়ম
    match /class_notes/{noteId} {
      // সবাই ক্লাস নোট পড়তে পারবে
      allow read: if true;
      
      // শুধুমাত্র অ্যাডমিনরা ক্লাস নোট লিখতে পারবে
      allow write: if request.auth != null && 
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Chapters কালেকশনের নিয়ম
    match /chapters/{chapterId} {
      // সবাই চ্যাপ্টার সেটিংস পড়তে পারবে
      allow read: if true;
      
      // শুধুমাত্র অ্যাডমিনরা চ্যাপ্টার সেটিংস লিখতে পারবে
      allow write: if request.auth != null && 
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Exam Results কালেকশনের নিয়ম
    match /examResults/{resultId} {
      // ব্যবহারকারী নিজের রেজাল্ট পড়তে পারবে
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // ব্যবহারকারী নিজের রেজাল্ট তৈরি করতে পারবে
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // অ্যাডমিনরা সব রেজাল্ট দেখতে পারবে
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Feedbacks কালেকশনের নিয়ম
    match /feedbacks/{feedbackId} {
      // শুধুমাত্র অ্যাডমিনরা ফিডব্যাক দেখতে পারবে
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // ব্যবহারকারী নিজের ফিডব্যাক তৈরি করতে পারবে
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // ক্লায়েন্ট থেকে ফিডব্যাক আপডেট বা ডিলিট করা যাবে না
      allow update, delete: if false;
    }
  }
}