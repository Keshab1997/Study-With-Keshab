rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users কালেকশন
    match /users/{userId} {
      
      // শুধুমাত্র অ্যাডমিনরা সব ব্যবহারকারীর তালিকা (list) পড়তে পারবে।
      allow list: if request.auth != null &&
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // একজন ব্যবহারকারী নিজের তথ্য (get) পড়তে পারবে, অথবা একজন অ্যাডমিন যেকোনো ব্যবহারকারীর তথ্য পড়তে পারবে।
      allow get: if request.auth != null &&
                  (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // একজন ব্যবহারকারী শুধুমাত্র নিজের তথ্য লিখতে বা আপডেট করতে পারবে।
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // NotificationQueue কালেকশন: শুধুমাত্র অ্যাডমিনরা নোটিফিকেশন পাঠানোর অনুরোধ করতে পারবে।
    match /notificationQueue/{docId} {
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow read, update, delete: if false;
    }

    // Notifications কালেকশন: লগইন করা ব্যবহারকারীরা শুধুমাত্র নোটিফিকেশন পড়তে পারবে।
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }
    
  }
}